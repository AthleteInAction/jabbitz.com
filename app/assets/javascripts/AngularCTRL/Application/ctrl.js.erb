			var modalInstance = $modal.open({
				animation: true,
				templateUrl: '/angularjs/templates/new_person.html',
				controller: 'NewPersonCtrl',
				size: null,
				resolve: {
					params: function(){
						return scope.params;
					},
					current_user: function(){
						return scope.current_user;
					},
					person: function(){
