td.person-info {
	font-size: 20px;
	font-weight: 300;
	color: #5F5F5F;
}
div.person-name {
	font-weight: 700;
	color: #337ab7;
}
div.person-item {
	margin-bottom: 10px;
}

div.person-social {
	margin-top: 20px;
	color: #333;
}

div.person-social-account {
	display: table;
	border-spacing: 0;
	border-collapse: separate;
	margin-bottom: 10px;
}

div.person-social-account div.item {
	display: table-cell;
	vertical-align: middle;
	font-size: 18px;
}
div.person-social-account div.item:first-child {
	width: 29px;
}
div.person-social-account div.item:last-child {
	padding-left: 20px;
}

div.chime-container {
	border-radius: 6px;
	background: #466083;
	margin-top: 20px;
	padding: 10px;
	font-size: 16px;
	color: #FFF;
	font-weight: 300;
}
div.chime-modal {
	border-radius: 4px;
	background: #466083;
	padding: 10px;
	font-size: 16px;
	color: #FFF;
	font-weight: 300;
}
div.chime-edit {
	margin-bottom: 6px;
}
div.chime-edit a.edit {
	float: left;
	text-decoration: none;
	color: #FFF533;
	font-size: 13px;
}
div.chime-edit a.edit:hover {
	color: #B3AD2E;
}
div.chime-edit a.delete {
	float: right;
	text-decoration: none;
	color: #FF6E69;
	font-size: 20px;
}
div.chime-edit a.delete:hover {
	color: #CF4E4A;
}
div.chime-name {
	font-weight: 500;
	margin-top: 7px;
}
div.chime-location {

}
div.chime-body {
	margin-top: 7px;
	font-size: 14px;
}