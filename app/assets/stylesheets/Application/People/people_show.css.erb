td.person-info {
	font-size: 20px;
	font-weight: 300;
	color: #5F5F5F;
}
div.person-name {
	font-weight: 700;
	color: #337ab7;
}
div.person-item {
	margin-bottom: 10px;
}

div.person-social {
	margin-top: 20px;
	color: #333;
}

div.person-social-account {
	display: table;
	border-spacing: 0;
	border-collapse: separate;
	margin-bottom: 10px;
}

div.person-social-account div.item {
	display: table-cell;
	vertical-align: middle;
	font-size: 18px;
}
div.person-social-account div.item:first-child {
	width: 29px;
}
div.person-social-account div.item:last-child {
	padding-left: 20px;
}