table.myaccount-table {
	width: 100%;
	border-spacing: 0;
	border-collapse: separate;
}
table.myaccount-table tr th {
	border-bottom: solid 1px #CCC;
	padding-left: 6px;
}
table.myaccount-table tr td {
	padding-top: 20px;
	padding-left: 6px;
	vertical-align: top;
}
table.myaccount-table tr td:first-child {
	width: 325px;
}
table.myaccount-table tr td button {
	/*margin-top: 20px;*/
}


div.myaccount-form-container {
	display: table;
	border-collapse: separate;
	border-spacing: 0;
	width: 100%;
}
div.myaccount-form-container div.myaccount-form-item {
	display: table-cell;
	width: 50%;
}
div.myaccount-form-container div.myaccount-form-item:last-child {
	padding-left: 20px;
}
div.myaccount-form-container div.myaccount-form-item:first-child {
	padding-right: 20px;
}

ul.social-list {
	list-style: none;
	margin: 0;
	padding: 0;
	/*width: 100%;*/
}
ul.social-list li {
	/*padding: 6px 0;*/
}
ul.social-list li:last-child {
	margin-bottom: 10px;
}
ul.social-list li div.social-list-wrap {
	display: table;
	border-spacing: 0;
	border-collapse: separate;
	/*width: 100%;*/
}
ul.social-list li div.social-list-wrap div.social-list-item {
	display: table-cell;
	vertical-align: middle;
}
ul.social-list li div.social-list-wrap div.social-list-item:last-child {
	text-align: right;
	padding-left: 20px;
}
ul.social-list li div.social-list-wrap div.social-list-item a {
	text-decoration: none;
}
ul.social-list li div.social-list-wrap div.social-list-item a.remove {
	color: red;
}