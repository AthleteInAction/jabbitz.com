div.dashboard-nav {
	display: table;
	border-collapse: separate;
	border-spacing: 0;
	width: 100%;
	height: 100px;
}
div.dashboard-nav div.dashboard-nav-item {
	display: table-cell;
	vertical-align: middle;
	text-align: left;
}
div.dashboard-nav div.dashboard-nav-item:last-child {
	text-align: right;
}

div.dashboard-nav div.dashboard-nav-item a.logo {
	display: block;
	height: 80px;
	width: 118px;
	background-image: url(<%= asset_path 'logo.png' %>);
	background-position: center center;
	background-repeat: no-repeat;
	background-size: 118px 80px;
}

div.dashboard-nav div.dashboard-nav-item ul.dashboard-nav-bar {
	list-style: none;
	margin: 0;
	padding: 0;
}
div.dashboard-nav div.dashboard-nav-item ul.dashboard-nav-bar:after {
	clear: both;
}
div.dashboard-nav div.dashboard-nav-item ul.dashboard-nav-bar li {
	display: inline-block;
	padding-left: 15px;
	padding-right: 15px;
	vertical-align: middle;
}
div.dashboard-nav div.dashboard-nav-item ul.dashboard-nav-bar li:last-child {
	padding-right: 0;
}
div.dashboard-nav div.dashboard-nav-item ul.dashboard-nav-bar li a {
	display: block;
	color: #FFF;
	font-size: 18px;
	text-decoration: none;
}
div.dashboard-nav div.dashboard-nav-item ul.dashboard-nav-bar li a:hover {
	color: red;
}
div.dashboard-nav div.dashboard-nav-item ul.dashboard-nav-bar li a.myaccount {
	display: block;
}