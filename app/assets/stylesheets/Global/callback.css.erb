div.form-group.callback {
  position: relative !important;
}
div.form-group.callback div.callback-item {
  position: absolute;
  right: -35px;
  top: 5px;
}
div.form-group.callback div.callback-item div.icon_saved {
  width: 22px;
  height: 23px;
  background: url(<%= asset_path 'icon-callback-check.png' %>) center center no-repeat;
}
div.form-group.callback div.callback-item div.icon_loading {
  width: 22px;
  height: 23px;
  background: url(<%= asset_path 'icon-loading.gif' %>) center center no-repeat;
}