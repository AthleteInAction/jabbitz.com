<div class="chime-modal">
	<form name="new_person_form" novalidate ng:submit="newPersonForm()">

		<div><label>Basic Information:</label></div>

		<div class="form-group" ng:class="{'has-error':submitted && new_person_form.name.$error.required}">
			<input type="text" name="name" ng:model="person.name" class="form-control" required placeholder="Full Name" />
			<alert type="danger sm" ng:if="submitted && new_person_form.name.$error.required">Name is required.</alert>
		</div>

		<div class="form-group" ng:class="{'has-error':submitted && new_person_form.email.$error.pattern}">
			<input type="text" name="email" ng:model="person.email" class="form-control" placeholder="Email" ng:pattern="emailValidate" />
			<alert type="danger sm" ng:if="submitted && new_person_form.email.$error.pattern">Email is invalid.</alert>
		</div>

		<div class="form-group">
			<input type="text" name="phone" ng:model="person.phone" class="form-control" placeholder="Phone Number" />
		</div>

		<div class="form-group">
			<input type="text" name="address" ng:model="person.address" class="form-control" placeholder="Address" />
		</div>

		<div class="form-group">
			<input type="text" name="city" ng:model="person.city" class="form-control" placeholder="City" />
		</div>

		<div class="form-group">
			<input type="text" name="state" ng:model="person.state" class="form-control" placeholder="State" />
		</div>

		<div class="form-group">
			<input type="text" name="zip_code" ng:model="person.zip_code" class="form-control" placeholder="ZIP / Postal Code" />
		</div>

		<button class="btn btn-default">Create</button>
		<a href="" ng:click="close()" class="btn btn-danger">Cancel</a>

	</form>
</div>